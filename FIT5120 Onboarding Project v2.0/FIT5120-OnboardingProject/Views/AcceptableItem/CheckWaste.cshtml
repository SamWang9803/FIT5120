@model FIT5120_OnboardingProject.Models.AcceptableItem

@{
    ViewBag.Title = "CheckWaste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CheckWaste</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>acceptables items check</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AcceptableItemID, "acceptable_items", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.AntiForgeryToken()
                @Html.DropDownList("acceptable_items", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AcceptableItemID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Check" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<p>@ViewBag.resultString</p>
