
@{
    ViewBag.Title = "Message_send";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Delius+Swash+Caps" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/joke_game/joke_game.css">
    <script src="https://kit.fontawesome.com/fad7ced9d0.js" crossorigin="anonymous"></script>
    <script src='~/Scripts/joke_game/stop_word.js'></script>
    <script src='~/Scripts/joke_game/scroll_page.js'></script>
    <script src='~/Scripts/joke_game/word_chose.js'></script>
    <script src='~/Scripts/joke_game/post_card.js'></script>
    <script src='~/Scripts/joke_game/aduio.js'></script>

    <script>
        window.onload = cardSentAudio();
    </script>

</head>

<body>


        <div class="wrapper">
            <div><span class="dot"></span></div>
            <div><span class="dot"></span></div>
            <div><span class="dot"></span></div>
            <div><span class="dot"></span></div>
            <div><span class="dot"></span></div>
            <div><span class="dot"></span></div>
            <div><span class="dot"></span></div>
            <div><span class="dot"></span></div>
            <div><span class="dot"></span></div>
            <div><span class="dot"></span></div>
            <div><span class="dot"></span></div>
        </div>
        <br>
        <h1 style='align-text:center; margin-left:33%; font-size: 30px; z-index:2;position:relative;'>
            Our postcard is sent!
        </h1>
        <br>
        <div class='gameBox' id='reflection' style='height: 300px; position:relative;'>
            <div class='textBox' style='display: flex; height: 220px; align-text:center;justify-content:center; font-size: 23px;align-items: center; position:relative;  z-index:2'>
                <p style='line-height: 3;'>
                    If the reader <span style='color:green;'>likes it</span>, you will <span style='color:green' ;>get 5 tokens.</span><br>
                    If the reader <span style='color:orange' ;>finds it neutral</span>,
                    you will <span style='color:orange' ;>get 3 tokens.</span><br>
                    If the reader <span style='color:red' ;>finds it offensive</span>,
                    you will <span style='color:red' ;>lose 5 tokens.</span>
                </p>
            </div>
        </div>
        <div style='margin:10; display:flex; justify-content:center; margin-top:3%'>
            <a href="@Url.Action("Joke_game","Jokes")">
                <button class='purple' style='font-size:20px; font-weight:bold; letter-spacing: 0.1em; width: 200px; padding: 5; margin-right:20px'>
                    <div style='display:flex; align-items:center'>
                        Play Again
                </button>
            </a>
            <a href="@Url.Action("ReaderMessage","Messages")">
                <button class='purple' style='font-size:20px; font-weight:bold; letter-spacing: 0.1em; width: 200px; padding: 5; margin-right:20px'>
                    <div style='display:flex; align-items:center'>
                        Check My Message
                </button>
            </a>
            <a href="@Url.Action("Index","Home")">
                <button class='purple' style='font-size:20px; font-weight:bold; letter-spacing: 0.1em;width: 200px; padding: 5px'>
                    <div style='display:flex; align-items:center'>
                        Back to Homepage
                    </div>
                    <img src="@Url.Content("~/images/joke_game_source/navi_back2.png")" id='squid' style="pointer-events: none;">
                    <img src="@Url.Content("~/images/joke_game_source/navi_back.png")" id='squid2'style="pointer-events: none;">
                    <img src="@Url.Content("~/images/joke_game_source/navi_back3.png")" id='squid3_notwarn'style="pointer-events: none;">
                </button>
            </a>
        </div>
</body>

