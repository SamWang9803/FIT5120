@model FIT5120Project.Models.Message

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Message</h4>
        <div class="form-group">
            <p>You must choose at least one word form the list and use the word in your message: </p>
            <div class="col-md-10">
                @Html.DropDownList("vocabulary", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.messageText, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.messageText, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.messageText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.writerEmotion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("writerEmotion", new List<SelectListItem>
                {
                   new SelectListItem{ Text="Good", Value = "good" },
                   new SelectListItem{ Text="General", Value = "general" },
                   new SelectListItem{ Text="Bad", Value = "bad" },
                })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<p>@ViewBag.errorMessage</p>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
