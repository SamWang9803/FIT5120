<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewBag.Title - FunPluS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/navi_bar.css" />
    <link rel="icon" href="@Url.Content("~/images/FunPlusIcon.ico")" />
</head>
<body>
    <div class="container body-content">
        <div style="display:block; float:right; right:0;">
            @Html.Partial("_LoginPartial")
        </div>
        @Html.Partial("_HeaderPartial")
        <br>
        @RenderBody()
        <br>
        @Html.Partial("_FooterPartial")
    </div>

    <div class="container body-content" style = "text-align:right;">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ColorYouS-Fun+</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
