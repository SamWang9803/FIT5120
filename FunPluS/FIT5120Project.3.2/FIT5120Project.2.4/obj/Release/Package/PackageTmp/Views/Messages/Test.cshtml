@model IEnumerable<FIT5120Project.Models.Message>
@{
    ViewBag.Title = "Test";
    Layout = null;
}

<h2>Write your message</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.messageText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.writerEmotion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.readerEmotion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.messageText)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.writerEmotion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.readerEmotion)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
    }

</table>

<style>
    body {
        background-image: url(../images/background_3.png);
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>


